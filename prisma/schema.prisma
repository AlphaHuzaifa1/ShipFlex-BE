generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ProductSource {
  manual
  tiktok
  shopify
}

model Companies {
  id                           Int      @id @default(autoincrement())
  name                         String   @db.VarChar(50)
  contact_number               String   @db.VarChar(50)
  display_name                 String?  @db.VarChar(50)
  email                        String?  @db.VarChar(50)
  logo_url                     String?  @db.VarChar(255)
  business_registration_number String?  @db.VarChar(50)
  ioss_number                  String?  @db.VarChar(50)
  eori_number                  String?  @db.VarChar(50)
  facebook_url                 String?  @db.VarChar(50)
  instagram_url                String?  @db.VarChar(50)
  youtube_url                  String?  @db.VarChar(50)
  twitter_url                  String?  @db.VarChar(50)
  createdAt                    DateTime @default(now())
  updatedAt                    DateTime @updatedAt

  Merchants Merchants[]

  @@index([name])
  @@map("companies")
}

model Merchants {
  id                            Int       @id @default(autoincrement())
  first_name                    String    @db.VarChar(50)
  last_name                     String    @db.VarChar(50)
  email                         String    @unique @db.VarChar(50)
  phone                         String    @db.VarChar(50)
  password                      String    @db.Text
  email_verified                Boolean   @default(false)
  email_verification_otp        String?   @db.VarChar(6)
  email_verification_expires_at DateTime?
  reset_password_otp            String?   @db.VarChar(6)
  reset_password_expires_at     DateTime?
  company_id                    Int
  status                        String    @default("active") @db.VarChar(20)
  createdAt                     DateTime  @default(now())
  updatedAt                     DateTime  @updatedAt

  company                       Companies            @relation(fields: [company_id], references: [id])
  products                      Products[]
  merchant_addresses            MerchantAddresses[]

  @@index([email])
  @@index([status])
  @@map("merchants")
}

model MerchantAddresses {
  id             Int      @id @default(autoincrement())
  nickname       String?  @db.VarChar(100)
  company_name   String   @db.VarChar(100)
  contact_name   String   @db.VarChar(100)
  contact_number String   @db.VarChar(50)
  email          String   @db.VarChar(100)
  country        String   @db.VarChar(100)
  address_line_1 String   @db.Text
  address_line_2 String?  @db.Text
  postal_code    String   @db.VarChar(20)
  province       String?  @db.VarChar(100)
  city           String   @db.VarChar(100)
  default_ship_address   Boolean  @default(false)
  default_return_address Boolean  @default(false)
  
  merchant_id    Int
  merchant       Merchants @relation(fields: [merchant_id], references: [id])

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([merchant_id])
  @@map("merchant_addresses")
}

model Products {
  id                Int      @id @default(autoincrement())
  sku               String?  @unique @db.VarChar(100)
  description       String   @db.Text
  length            Float?
  width             Float?
  height            Float?
  weight            Float?
  category_hs_code  String?  @db.VarChar(100)
  country_of_origin String?  @db.VarChar(100)
  pick_location     String?  @db.VarChar(100)

  source            ProductSource @default(manual)
  external_id       String?  @db.VarChar(100)

  merchant_id       Int
  merchant          Merchants @relation(fields: [merchant_id], references: [id])

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([sku])
  @@index([merchant_id])
  @@map("products")
}
